    <br>
    <p> Include at least one of these destinations </p>
    <input type="text" placeholder="Desination 1..." name="destination1"><br>
    <input type="text" placeholder="Desination 2..." name="destination2"><br>
    <input type="text" placeholder="Desination 3..." name="destination3"><br>
    <br>
    <p> Months </p>
    <input type="checkbox" name="verano" value="verano"> December - March<br>
    <input type="checkbox" name="otono" value="otono"> March - June<br>
    <input type="checkbox" name="invierno" value="invierno"> June - September<br>
    <input type="checkbox" name="primavera" value="primavera"> September - December<br>

    <br>
    <p> Range of days </p>
    <div class='multi-range' data-lbound='1' data-ubound='30'>
      <hr />
      <input type='range' name='minranged' min='1' max='29' step='1' value='1' oninput='this.form.mindays.value=this.value;'/>
      <input type='range' name='maxranged' min='2' max='30' step='1' value='30'oninput='this.form.maxdays.value=this.value;'/>
    </div>
    <input type="number" name="mindays" min="1" max="29" value="1" oninput="this.form.minranged.value=this.value" />
    <input type="number" name="maxdays" min="2" max="30" value="30" oninput="this.form.maxranged.value=this.value" />
    <br>
    <p> Budget </p>
    <div class='multi-range' data-lbound='1' data-ubound='30'>
      <hr />
      <input type='range' name='minrangeb' min='50000' max='950000' step='50000' value='50000' oninput='this.form.minbud.value=this.value;'/>
      <input type='range' name='maxrangeb' min='100000' max='1000000' step='50000' value='1000000'oninput='this.form.maxbud.value=this.value;'/>
    </div>
    <input type="number" name="minbud" min="50000" max="950000" value="50000" step='50000' oninput="this.form.minrangeb.value=this.value" />
    <input type="number" name="maxbud" min="100000" max="1000000" value="1000000" step='50000' oninput="this.form.maxrangeb.value=this.value" />
