            <div class="itinerary-list-container">
              <div class="itinerary-list-container__picture">
                <% if ((itin_index % 2) == 0) { %>
                  <a href="/itineraries/<%= itinerary.id %>"><img src="<%= assetPath('itinerary-pic1.jpg') %>"></a>
