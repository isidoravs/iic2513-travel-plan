<h2>Itineraries</h2>
<a href="<%- newItineraryPath %>">New itinerary</a>
<% if (!itinerariesList.length) { %>
  <p>No results</p>
<% } else { %>
  <table id="itineraries-list">
    <thead>
        <tr>
          <th>Name</th>
          <th>Budget</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Description</th>
          <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
      <% itinerariesList.forEach((itinerary) => { %>
        <tr>
          <td><%- itinerary.itineraryName %></td>
          <td><%- itinerary.budget %></td>
          <td><%- itinerary.startDate %></td>
          <td><%- itinerary.endDate %></td>
          <td><%- itinerary.description %></td>
          <td><a href="<%- editItineraryPath(itinerary) %>">Edit</a></td>
          <td>
            <form action="<%- showItineraryPath(itinerary) %>" method="GET">
              <input type="hidden" name="_method" value="show" />
              <input type="submit" value="Show" />
            </form>
          </td>
          <td>
            <form action="<%- deleteItineraryPath(itinerary) %>" method="POST">
              <input type="hidden" name="_method" value="delete" />
              <input type="submit" value="Delete" />
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>
