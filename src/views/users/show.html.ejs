<div class="user-header">
  <div class="user-image">
      <img src="<%= assetPath('default-user.png') %>">
  </div>
  <div class="user-info">
    <div class="user-info__name"><%- user.publicName %></div>
    <div class="user-info__username">@<%- user.username %></div>
    <div class="user-info__location">
        <img src="<%= assetPath('pin-icon.png') %>">
        <%- user.country %>
    </div>
    <div class="user-info__score">Score: <%- user.score %></div>
  </div>
</div>






<h2>Show User</h2>
  <table id="one-user">
    <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Password</th>
          <th>Birth Date</th>
          <th>Gender</th>
          <th>Country</th>
          <th>Public Name</th>
          <th>Score</th>
          <th>Photo</th>
          <th colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr>
          <td><%- user.username %></td>
          <td><%- user.email %></td>
          <td><%- user.password %></td>
          <td><%- user.birthDate %></td>
          <td><%- user.gender %></td>
          <td><%- user.country %></td>
          <td><%- user.publicName %></td>
          <td><%- user.score %></td>
          <td><%- user.photo %></td>
          <td><a href="<%- editUserPath(user) %>">Edit</a></td>
          <td>
            <form action="<%- deleteUserPath(user) %>" method="POST">
              <input type="hidden" name="_method" value="delete" />
              <input type="submit" value="Delete" />
            </form>
          </td>
        </tr>
    </tbody>
  </table>

