<h2>Users</h2>
<a href="<%- newUserPath %>">New user</a>
<% if (!usersList.length) { %>
  <p>No results</p>
<% } else { %>
  <table id="users-list">
    <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Password</th>
          <th>Birth Date</th>
          <th>Gender</th>
          <th>Country</th>
          <th>Public Name</th>
          <th>Score</th>
          <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
      <% usersList.forEach((user) => { %>
        <tr>
          <td><%- user.username %></td>
          <td><%- user.email %></td>
          <td><%- user.password %></td>
          <td><%- user.birthDate %></td>
          <td><%- user.gender %></td>
          <td><%- user.country %></td>
          <td><%- user.publicName %></td>
          <td><%- user.score %></td>
          <td><a href="<%- editUserPath(user) %>">Edit</a></td>
          <td>
            <form action="<%- showUserPath(user) %>" method="GET">
              <input type="hidden" name="_method" value="show" />
              <input type="submit" value="Show" />
            </form>
          </td>
          <td>
            <form action="<%- deleteUserPath(user) %>" method="POST">
              <input type="hidden" name="_method" value="delete" />
              <input type="submit" value="Delete" />
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>
