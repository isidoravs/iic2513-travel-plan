<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <link rel="shortcut icon" href="<%= assetPath('logo-plane.png') %>">
    <title>Travel & Plan</title>
    <% if (env !== 'development') { %>
      <link rel="stylesheet" href="<%= assetPath('app.css') %>">
    <% } %>
  </head>

  <body>
    <!-- https://www.w3schools.com/howto/howto_css_searchbar.asp -->
    <div class="header">
      <a href="/" class="logo">TIP - travel&plan</a>
      <div class="header-right">
        <div class="search-container">
          <form action="#">
            <input type="text" placeholder="Search your next destination..." name="search">
            <button type="submit"><img src="<%= assetPath('logo.png') %>" height="10" width="10" alt="Logo" /></i></button>
          </form>
        </div>
        <% if (currentUser) { %>
          <span class="name">Hi <%= currentUser.username %></span>
          <form action="<%= destroySessionPath %>" method="post">
            <input type="hidden" name="_method" value="delete" />
            <input type="submit" value="Logout" />
          </form>
        <% } else { %>
          <span class="name">Hi!</span>
          <a class="active" href="<%= newSessionPath %>">Login</a>
          <a href="/users/new">Sign Up</a>
        <% } %>        
      </div>
    </div>
    <div class="content">
        <%- body %>
        <script src="<%= assetPath('app.js') %>"></script>
    </div>


</html>
