<div class="form-container">
  <% if (locals.errors) { %>
    <div class="errors">
      You need to fix the following errors:
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.message %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>
  <form action="<%= submitDayActivityPath %>" method="post">
    <% if (!activity.isNewRecord) { %>
      <input type="hidden" name="_method" value="patch" />
    <% } %>
    <div class="field">
      <label for="title">Title</label>
      <input type="text" name="title" value="<%= activity.title %>" />
    </div>
    <!-- <div class="field">
      <label for="activityPicture">Activity Picture</label>
      <input type="text" name="activityPicture" value="<%= activity.activityPicture%>" />
    </div> -->
    <div class="field">
      <label for="description">Description</label>
      <textarea type="text" name="description"><%= activity.description %></textarea>
    </div>
    <div class="field">
      <% if (activity.isNewRecord) { %>
        <input type="submit" name="create" value="Create" />
      <% } else { %>
        <input type="submit" name="update" value="Update" />
      <% } %>
    </div>
  </form>
</div>
